<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="stackPane" maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1540.0" stylesheets="main.css"
           xmlns="http://javafx.com/javafx/11.0.1" fx:controller="main.Dashboard.Seller.SellerDashboard">
    <children>
        <BorderPane fx:id="mainPane" prefHeight="970.0" prefWidth="1720.0">
            <left>
                <Pane prefHeight="970.0" prefWidth="100.0" style="-fx-background-color: #5e85a4;"
                      BorderPane.alignment="CENTER">
                    <children>
                        <VBox alignment="TOP_CENTER" layoutX="-1.0" layoutY="3.0" prefHeight="970.0" prefWidth="100.0">
                            <children>
                                <JFXButton fx:id="homeButton" focusTraversable="false" prefHeight="98.0"
                                           prefWidth="109.0" text="​">
                                    <graphic>
                                        <ImageView fitHeight="58.0" fitWidth="49.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@home.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </JFXButton>
                                <JFXButton fx:id="logoutButton" focusTraversable="false" prefHeight="98.0"
                                           prefWidth="109.0" text="​">
                                    <graphic>
                                        <ImageView fitHeight="58.0" fitWidth="49.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@logout.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </JFXButton>
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </left>
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #87a8c2;"
                            BorderPane.alignment="CENTER">
                    <children>
                        <VBox prefWidth="100.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="30.0">
                                    <VBox.margin>
                                        <Insets left="20.0"/>
                                    </VBox.margin>
                                    <children>
                                        <ImageView fitHeight="114.0" fitWidth="124.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@userAvatar.png"/>
                                            </image>
                                        </ImageView>
                                        <Label fx:id="usernameLabel" text="Username">
                                            <font>
                                                <Font name="Gill Sans Ultra Bold" size="30.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <JFXButton fx:id="personalInfoButton" prefHeight="70.0" prefWidth="1400.0"
                                           style="-fx-background-color: #5e85a4; -fx-background-radius: 20;"
                                           text="Personal Info" textFill="WHITE">
                                    <font>
                                        <Font name="Verdana Bold" size="21.0"/>
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="salesButton" prefHeight="70.0" prefWidth="1400.0"
                                           style="-fx-background-color: #5e85a4; -fx-background-radius: 20;"
                                           text="Sales History" textFill="WHITE">
                                    <font>
                                        <Font name="Verdana Bold" size="21.0"/>
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="manageProductsButton" prefHeight="70.0" prefWidth="1400.0"
                                           style="-fx-background-color: #5e85a4; -fx-background-radius: 20;"
                                           text="Manage Products" textFill="WHITE">
                                    <font>
                                        <Font name="Verdana Bold" size="21.0"/>
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="createProductButton" prefHeight="70.0" prefWidth="1400.0"
                                           style="-fx-background-color: #5e85a4; -fx-background-radius: 20;"
                                           text="Create Product" textFill="WHITE">
                                    <font>
                                        <Font name="Verdana Bold" size="21.0"/>
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="viewCategoriesButton" prefHeight="70.0" prefWidth="1400.0"
                                           style="-fx-background-color: #5e85a4; -fx-background-radius: 20;"
                                           text="View Categories" textFill="WHITE">
                                    <font>
                                        <Font name="Verdana Bold" size="21.0"/>
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="viewAuctionsButton" prefHeight="70.0" prefWidth="1400.0"
                                           style="-fx-background-color: #5e85a4; -fx-background-radius: 20;"
                                           text="View Auctions" textFill="WHITE">
                                    <font>
                                        <Font name="Verdana Bold" size="21.0"/>
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="createAuctionButton" prefHeight="70.0" prefWidth="1400.0"
                                           style="-fx-background-color: #5e85a4; -fx-background-radius: 20;"
                                           text="Create Auction" textFill="WHITE">
                                    <font>
                                        <Font name="Verdana Bold" size="22.0"/>
                                    </font>
                                </JFXButton>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </padding>
                        </VBox>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</StackPane>
